{
  "name": "mythoria-AI defender",
  "version": "1.0.0",
  "main": "index.js",
  "dependencies": {
    "discord.js": "^14.13.0"
  }
} const { Client, GatewayIntentBits } = require('discord.js');

const client = new Client({
  intents: [GatewayIntentBits.Guilds, GatewayIntentBits.GuildMessages, GatewayIntentBits.MessageContent],
});

client.on('ready', () => {
  console.log(`Bot aktif: ${client.user.tag}`);
});

client.on('messageCreate', message => {
  if (message.author.bot) return;

  if (message.content === '!selam') {
    message.reply('Merhaba! Ben Mythoria AI defender :)');
  }
});

client.login(process.env.TOKEN); const { Client, GatewayIntentBits } = require('discord.js');

const client = new Client({
  intents: [
    GatewayIntentBits.Guilds,
    GatewayIntentBits.GuildMessages,
    GatewayIntentBits.MessageContent,
  ],
});

// Yasaklı kelimeler listesi
const KUFURLER = ["amk", "aq", "orospu", "salak", "siktir", "piç"];

client.on('ready', () => {
  console.log(`Bot aktif: ${client.user.tag}`);
});

client.on('messageCreate', async (message) => {
  if (message.author.bot) return;

  const mesaj = message.content.toLowerCase();

  // Küfür kontrolü
  if (KUFURLER.some(kufur => mesaj.includes(kufur))) {
    try {
      await message.delete(); // Mesajı sil
      await message.channel.send(`${message.author}, küfür etmek yasak! Lütfen düzgün konuş.`);
    } catch (err) {
      console.error('Mesaj silinemedi:', err);
    }
  }

  if (mesaj === '!selam') {
    message.reply('Merhaba! Ben Mythoria AI DEFENDER :)');
  }
});

client.login(process.env.TOKEN);

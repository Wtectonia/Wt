        if(Math.abs(player.x-boss.x)<200){score=Math.max(0,score-10);showDialogue("âš¡ Ø¶Ø±Ø¨Ù‡ Ú©ÙˆØ¨Ù†Ø¯Ù‡!");}
      }
    }
    document.getElementById("score").innerText="Ø§Ù…ØªÛŒØ§Ø²: "+score;
    requestAnimationFrame(loop);
  }
  loop();
})();

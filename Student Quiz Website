    <div id="results-page" class="container hidden">
        <h2>Your Results</h2>
        <p id="score-display"></p>
        <p id="feedback"></p>
        <button class="button" onclick="restartQuiz()">Try Again</button>
    </div>

    <script>
        // Get references to the main sections of the app
        const startPage = document.getElementById('quiz-start-page');
        const quizPage = document.getElementById('quiz-page');
        const resultsPage = document.getElementById('results-page');
        const quizForm = document.getElementById('quiz-form');
        const scoreDisplay = document.getElementById('score-display');
        const feedbackElement = document.getElementById('feedback');

        // This object stores the correct answers for each question.
        // The key is the question name (e.g., 'q1'), and the value is the correct option (e.g., 'b').
        const correctAnswers = {
            q1: 'b', // Ctrl + C
            q2: 'c', // Cell
            q3: 'c', // Slide
            q4: 'd', // .docx
            q5: 'c', // SUM()
            q6: 'c', // Shift + F5
            q7: 'c', // Makes it darker and thicker
            q8: 'c', // Use the "$" button
            q9: 'd', // Theme
            q10: 'c' // Ctrl + S
        };

        // Function to show the quiz page and hide the others
        function startQuiz() {
            startPage.classList.add('hidden');
            quizPage.classList.remove('hidden');
        }

        // Add an event listener to the quiz form to handle submission
        quizForm.addEventListener('submit', (event) => {
            // Prevent the default form submission (which would refresh the page)
            event.preventDefault();

            let score = 0;
            const formData = new FormData(quizForm);

            // Loop through the correct answers to check the user's responses
            for (const question in correctAnswers) {
                const userAnswer = formData.get(question);
                if (userAnswer === correctAnswers[question]) {
                    score++;
                }
            }
            
            // Show the results page with the final score
            displayResults(score);
        });

        // Function to show the results and update the text
        function displayResults(score) {
            quizPage.classList.add('hidden');
            resultsPage.classList.remove('hidden');

            scoreDisplay.textContent = `You scored ${score} out of 10!`;

            // Provide motivational feedback based on the score
            let feedbackText;
            if (score === 10) {
                feedbackText = "Excellent! You are a Microsoft Office expert!";
            } else if (score >= 7) {
                feedbackText = "Great job! You have a strong understanding.";
            } else if (score >= 4) {
                feedbackText = "Good effort! Keep practicing to improve.";
            } else {
                feedbackText = "Keep trying! Every try is a step forward.";
            }
            feedbackElement.textContent = feedbackText;
        }

        // Function to restart the quiz
        function restartQuiz() {
            resultsPage.classList.add('hidden');
            startPage.classList.remove('hidden');
            // Reset the form so all radio buttons are unchecked
            quizForm.reset();
        }
    </script>

</body>
</html>

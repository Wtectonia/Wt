    const canvas = document.getElementById("gameCanvas");
    const ctx = canvas.getContext("2d");let money = 100;
let enemies = [];
let towers = [];
let bullets = [];
let frame = 0;

class Enemy {
  constructor() {
    this.x = 0;
    this.y = 220;
    this.hp = 50;
    this.speed = 1;
  }
  update() {
    this.x += this.speed;
  }
  draw() {
    ctx.fillStyle = "red";
    ctx.fillRect(this.x, this.y, 20, 20);
  }
}

class Tower {
  constructor(x, y) {
    this.x = x;
    this.y = y;
    this.cooldown = 0;
  }
  update() {
    if (this.cooldown > 0) this.cooldown--;
    let target = enemies.find(e => Math.abs(e.x - this.x) < 150 && Math.abs(e.y - this.y) < 150);
    if (target && this.cooldown === 0) {
      bullets.push(new Bullet(this.x, this.y, target));
      this.cooldown = 50;
    }
  }

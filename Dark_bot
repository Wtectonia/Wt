  <script>
    let selectedBot = "";
    let selectedPlan = "";
    function selectBot(bot) { selectedBot = bot; document.getElementById('options').classList.add('hidden'); document.getElementById('plans').classList.remove('hidden'); }
    function selectPlan(plan) { selectedPlan = plan; document.getElementById('plans').classList.add('hidden'); document.getElementById('payment').classList.remove('hidden'); }
    function submitPayment() {
      const phone = document.getElementById('phone').value;
      const result = document.getElementById('result');
      if (phone === "09134145617") { result.innerHTML = "✅ شما به عنوان مدیر رایگان وارد شدید!"; }
      else if (phone.trim() === "") { result.innerHTML = "❌ لطفا شماره خط را وارد کنید."; }
      else { result.innerHTML = `✅ شماره ${phone} ثبت شد. لطفا پس از پرداخت به پشتیبانی پیام دهید.`; }
    }
  </script>

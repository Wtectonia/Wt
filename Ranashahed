    .contact-box{background:var(--card);padding:12px;border-radius:10px;box-shadow:0 6px 18px rgba(10,10,20,0.06);display:flex;gap:10px;align-items:center}
    .grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(170px,1fr));gap:14px;margin-top:16px}
    .card{background:var(--card);padding:14px;border-radius:12px;box-shadow:0 6px 18px rgba(10,10,20,0.06);text-align:center}

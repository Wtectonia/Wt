<body>
  <header>
    <h1 style="margin:0;font-size:22px">Free Fire — ডায়মন্ড লিস্ট</h1>
    <div style="margin-top:6px;font-size:13px;opacity:.95">শুধু লিস্টিং — পেমেন্ট/স্বয়ংক্রিয় টপ-আপ নয়। অর্ডার করতে ফোন/হোয়াটসঅ্যাপে যোগাযোগ করুন।</div>
  </header>  <main class="container">
    <div class="intro">
      <div>
        <div class="title">ডায়মন্ড প্যাকেজসমূহ</div>
        <div class="note">নিচের যেকোনো প্যাকেজ বেছে "অর্ডার" ক্লিক করে আমাদের নাম্বারে অর্ডার পাঠান।</div>
      </div>
      <div class="contact-box">
        <div style="font-weight:700">অর্ডার নাম্বার</div>
        <div id="contactDisplay" style="margin-left:8px;font-size:15px"></div>
      </div>
    </div><section class="grid" id="packagesGrid">
  <!-- cards generated by JS -->
</section>

<footer>
  <div>আপনি চাইলে আমি এখানে আপনার নাম্বার বসিয়ে দিতে পারি — নাম্বার দিন আর আমি আপডেট করে দেব।</div>
</footer>

  </main>  <script>
    // ====== CONFIG: Replace these values or edit the array ======
    // contactNumber should be in international format without +, e.g. 8801XXXXXXXXX for Bangladesh
    const contactNumber = '8801XXXXXXXXX'; // <-- আপনার নাম্বার এখানে বসান

    // packages: change label (diamonds), price (your selling price), note (optional)
    const packages = [
      {id:1, diamonds:'60', price:'৳30', note:'বেসিক'},
      {id:2, diamonds:'170', price:'৳85', note:''},
      {id:3, diamonds:'300', price:'৳150', note:''},
      {id:4, diamonds:'525', price:'৳260', note:'সর্বজনপ্রিয়'},
      {id:5, diamonds:'1075', price:'৳520', note:''},
      {id:6, diamonds:'2100', price:'৳1000', note:'বড় প্যাক'}
    ];
    // ==========================================================

    // helper: format contact for display (Bangla-friendly)
    function formatDisplay(num){
      if(!num) return 'নাম্বার নেই';
      // try to show as +8801xxx...
      if(num.startsWith('88')) return '+'+num;
      if(num.startsWith('0')) return num;
      return '+'+num;
    }

    // fill contact display
    document.getElementById('contactDisplay').textContent = formatDisplay(contactNumber);

    // build package cards
    const grid = document.getElementById('packagesGrid');
    packages.forEach(p=>{
      const card = document.createElement('div'); card.className='card';
      const amt = document.createElement('div'); amt.className='amount'; amt.textContent = p.diamonds + ' Diamonds';
      const pr = document.createElement('div'); pr.className='price'; pr.textContent = p.price + (p.note?(' — '+p.note):'');

      const btnOrder = document.createElement('a');
      btnOrder.className='btn btn-cta';
      // prepare whatsapp message
      const waMsg = encodeURIComponent(`Assalamualaikum,
আমি ${p.diamonds} ডায়মন্ড অর্ডার দিতে চাই। আপনার দোকানের নাম: (আপনার নাম)\nইউজার আইডি: (FF UID)\nটাকা: ${p.price}`);
      // whatsapp link (wa.me)
      btnOrder.href = `https://wa.me/${contactNumber}?text=${waMsg}`;
      btnOrder.target = '_blank';
      btnOrder.rel = 'noopener noreferrer';
      btnOrder.textContent = 'ওয়াটসঅ্যাপে অর্ডার';

      const btnCall = document.createElement('a');
      btnCall.className='btn btn-tel';
      btnCall.href = `tel:${contactNumber}`;
      btnCall.textContent = 'কলে অর্ডার';

      card.appendChild(amt);
      card.appendChild(pr);
      card.appendChild(btnOrder);
      card.appendChild(document.createTextNode(' '));
      card.appendChild(btnCall);
      grid.appendChild(card);
    });
  </script></body>

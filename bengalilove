<script>
let currentUser = null;
let messages = JSON.parse(localStorage.getItem("messages")||"[]");

function login(){
  let phone = document.getElementById("phone").value;
  if(phone.startsWith("+8801") && phone.length===14){
    currentUser = {phone: phone};
    localStorage.setItem("currentUser", JSON.stringify(currentUser));
    document.getElementById("auth").style.display="none";
    document.getElementById("profile").style.display="block";
  }else{ alert("рж╢рзБржзрзБржорж╛рждрзНрж░ +880 ржжрж┐рзЯрзЗ рж╢рзБрж░рзБ рж╣ржУрзЯрж╛ ржмрж╛ржВрж▓рж╛ржжрзЗрж╢рж┐ ржирж╛ржорзНржмрж╛рж░ ржжрж┐ржи!"); }
}

function saveProfile(){
  let name = document.getElementById("name").value;
  let age = document.getElementById("age").value;
  let loc = document.getElementById("location").value;
  if(name && age && loc){
    currentUser.name = name; currentUser.age=age; currentUser.location=loc;
    localStorage.setItem("currentUser", JSON.stringify(currentUser));
    document.getElementById("profile").style.display="none";
    document.getElementById("chat").style.display="block";
    loadMessages();
  }else{ alert("рж╕ржм рждржерзНржп ржкрзВрж░ржг ржХрж░рзБржи"); }
}

function sendMsg(){
  let msg = document.getElementById("msg").value;
  if(msg){
    messages.push({name: currentUser.name, text: msg});
    localStorage.setItem("messages", JSON.stringify(messages));
    document.getElementById("msg").value="";
    loadMessages();
  }
}

function loadMessages(){
  let chatBox = document.getElementById("chatBox");
  chatBox.innerHTML="";
  messages.forEach(m=>{
    let div = document.createElement("div");
    div.className="msg";
    div.innerText = m.name + ": " + m.text;
    chatBox.appendChild(div);
    chatBox.scrollTop = chatBox.scrollHeight;
  });
}

loadMessages();
</script>


    // Bouton 2 : changer la couleur
    function changerCouleur() {
      const couleurs = ['#FFCCCC', '#CCFFCC', '#CCCCFF', '#FFFFCC', '#FFCCFF'];
      const couleur = couleurs[Math.floor(Math.random() * couleurs.length)];
      document.body.style.backgroundColor = couleur;
    }

    // Bouton 3 : afficher un texte sur la page
    function afficherTexte() {
      document.getElementById('zoneTexte').innerText = "Tu as cliqu√© sur le bouton ! üéâ";
    }


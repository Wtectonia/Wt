<body>

<h1>✨ دولاب حظك الروحاني ✨</h1>

<input type="text" id="username" placeholder="اكتب اسمك" />
<br />
<button onclick="spin()">🎡 لف الدولاب</button>

<div id="wheel-container">
  <div id="pointer"></div>
  <div id="wheel"></div>
</div>

<div id="result"></div>

<!-- EmailJS SDK -->
<script src="https://cdn.jsdelivr.net/npm/emailjs-com@2/dist/email.min.js"></script>

<script>
  // الجوائز
  const prizes = [
    "قراءة كف مجانية",
    "خصم 5%",
    "حظ أوفر",
    "حظ أوفر",
    "قراءة خريطة فلكية"
  ];

  // رسم الدولاب
  const wheel = document.getElementById("wheel");
  for (let i = 0; i < prizes.length; i++) {
    const segment = document.createElement("div");
    segment.className = "segment";
    const angle = (360 / prizes.length) * i;
    segment.style.transform = `rotate(${angle}deg) skewY(-60deg)`;
    segment.innerText = prizes[i];
    wheel.appendChild(segment);
  }

  let spun = false;

  function spin() {
    const username = document.getElementById("username").value.trim();
    const resultDiv = document.getElementById("result");

    if (!username) {
      alert("من فضلك أدخل اسمك أولاً.");
      return;
    }

    // منع التكرار
    if (localStorage.getItem("spun_" + username)) {
      alert("لقد قمت بتجربة حظك مسبقاً!");
      return;
    }

    spun = true;
    const randomDeg = Math.floor(Math.random() * 360) + 1800; // 5 دورات كاملة
    wheel.style.transform = `rotate(${randomDeg}deg)`;

    // تحديد النتيجة بعد الدوران
    setTimeout(() => {
      const prizeIndex = Math.floor(((360 - (randomDeg % 360)) % 360) / (360 / prizes.length));
      const selectedPrize = prizes[prizeIndex];

      resultDiv.innerHTML = `🎉 ${username} نتيجتك: <strong>${selectedPrize}</strong>`;

      // حفظ النتيجة لعدم تكرار السحب
      localStorage.setItem("spun_" + username, selectedPrize);

      // إرسال الإيميل عبر EmailJS
      emailjs.init("service_uwvcrvr"); // ✨ 
      emailjs.send("service_uwvcrvr", "template_p8crb1o", {
        user_name: username,
        user_result: selectedPrize
      }).then(() => {
        console.log("📩 تم إرسال النتيجة على الإيميل.");
      }, (err) => {
        console.error("فشل إرسال الإيميل:", err);
      });

    }, 5200); // بعد انتهاء الدوران
  }
</script>

</body>

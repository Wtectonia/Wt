button {
  background: #ff9800;
  border: none;
  padding: 15px 30px;
  border-radius: 10px;
  font-size: 16px;
  cursor: pointer;
  transition: 0.3s;
}

button:hover {
  background: #ffc107;
}

#message {
  margin-top: 20px;
  font-size: 20px;
  font-weight: bold;
}

const messages = [
  "Keep pushing forward, Eyob!",
  "Your creativity is limitless!",
  "Code your dreams into reality!",
  "Every line of code brings you closer to success!",
  "Stay curious, stay brilliant!"
];

document.getElementById('inspireBtn').addEventListener('click', () => {
  const randomMessage = messages[Math.floor(Math.random() * messages.length)];
  document.getElementById('message').innerText = randomMessage;
});
